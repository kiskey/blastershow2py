# .env.example
# Configuration for the Stremio Addon

# Redis connection URL (default: redis://localhost:6379/0)
REDIS_URL=redis://localhost:6379/0

# Base URL of the forum to crawl
FORUM_URL=https://www.1tamilblasters.fi

# Number of initial forum pages to crawl on startup (default: 5)
INITIAL_PAGES=5

# Interval in seconds for full forum re-crawl (default: 1800 seconds = 30 minutes)
CRAWL_INTERVAL_SECONDS=1800

# Interval in hours to revisit individual threads (default: 24 hours)
THREAD_REVISIT_HOURS=24

# Maximum concurrent HTTP requests for crawling (default: 8)
MAX_CONCURRENCY=8

# Milliseconds to wait between requests to the forum (default: 250)
REQUEST_THROTTLE_MS=250

# If true, purge all Redis data on startup (default: False)
PURGE_ON_START=False

# URL to monitor for domain changes (optional, for future use)
DOMAIN_MONITOR=https://www.1tamilblasters.fi

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL) (default: INFO)
LOG_LEVEL=INFO

# Path to NLTK data directory (set by Dockerfile, usually /usr/local/nltk_data)
# NLTK_DATA=/usr/local/nltk_data
